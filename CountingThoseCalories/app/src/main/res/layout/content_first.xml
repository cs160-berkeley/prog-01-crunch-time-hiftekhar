<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hudaiftekhar.countingthosecalories.First"
    tools:showIn="@layout/activity_first">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Which Exercise?"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioGroup2"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leg-lift"
            android:id="@+id/radioButton8"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogging"
            android:id="@+id/radioButton13"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plank"
            android:id="@+id/radioButton9"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumping-Jacks"
            android:id="@+id/radioButton10"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycling"
            android:id="@+id/radioButton11"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking"
            android:id="@+id/radioButton12"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming"
            android:id="@+id/radioButton14"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stair-Climbing"
            android:id="@+id/radioButton15"
            android:checked="false"
            android:onClick="goNextScreen2" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imageView3"
            android:src="@drawable/exercise"
            android:layout_gravity="right" />
    </RadioGroup>
</RelativeLayout>
